{
  "name": "custom-fonts-in-emails",
  "description": "An extremely easy way to use custom fonts in emails without having to use art software. This package was built for @CrocodileJS.",
  "version": "1.0.1",
  "author": "Nick Baugh <niftylettuce@gmail.com>",
  "bugs": "https://github.com/crocodilejs/custom-fonts-in-emails/issues",
  "xo": {
    "extends": "prettier",
    "plugins": [
      "prettier",
      "mocha"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "envs": [
      "mocha"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "none"
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ],
      "max-params": [
        "error",
        5
      ],
      "complexity": [
        "error",
        24
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off",
      "mocha/no-exclusive-tests": "error"
    },
    "space": true
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "deasync": "^0.1.10",
    "fast-levenshtein": "^2.0.5",
    "lodash": "^4.16.4",
    "os-fonts": "^0.4.1",
    "sharp": "^0.18.2",
    "text-to-svg": "^3.0.1",
    "underscore.string": "^3.3.4"
  },
  "devDependencies": {
    "chai": "^4.1.1",
    "codecov": "^2.3.0",
    "dirty-chai": "^2.0.1",
    "eslint": "^4.6.1",
    "eslint-config-crocodile": "^1.0.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-prettier": "^2.2.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.5.0",
    "prettier": "^1.6.1",
    "xo": "^0.18.2"
  },
  "engines": {
    "node": ">= 8.x"
  },
  "homepage": "https://github.com/crocodilejs/custom-fonts-in-emails",
  "keywords": [
    "awesome",
    "base64",
    "bootstrap",
    "btoa",
    "convert",
    "converter",
    "data",
    "data-attr",
    "data-uri",
    "email",
    "encoded",
    "export",
    "fa",
    "font",
    "fontawesome",
    "html",
    "icon",
    "image",
    "img",
    "png",
    "render",
    "svg",
    "tag",
    "to",
    "uri"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": "crocodilejs/custom-fonts-in-emails",
  "scripts": {
    "lint": "xo",
    "test": "npm run lint && mocha"
  }
}
